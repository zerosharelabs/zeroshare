{
  "name": "server",
  "version": "0.1.0",
  "main": "server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "prisma migrate deploy && node build/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "db:push": "prisma db push",
    "dev:setup": "docker compose -f ../docker/docker-compose.dev.yml up -d db && npm run db:push"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "argon2": "^0.41.1",
    "better-auth": "^1.3.7",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-useragent": "^1.0.15",
    "filesize": "^10.1.6",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "human-number": "^2.0.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.7",
    "openpgp": "^6.2.2",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-useragent": "^1.0.5",
    "@types/hpp": "^0.2.6",
    "@types/human-number": "^1.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "cross-env": "^7.0.3",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
